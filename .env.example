# HALLEL予約システム環境変数例
# 実際の値は .env ファイルに設定してください

# Flask Secret Key (強力なランダム文字列を設定)
SECRET_KEY=your-very-strong-secret-key-here

# Gmail API認証情報 (credentials.jsonの内容)
GMAIL_CREDENTIALS_JSON={"installed":{"client_id":"your-client-id","project_id":"your-project","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_secret":"your-client-secret","redirect_uris":["http://localhost"]}}

# Gmail APIトークン (token.jsonの内容)
GMAIL_TOKEN_JSON={"token":"your-access-token","refresh_token":"your-refresh-token","token_uri":"https://oauth2.googleapis.com/token","client_id":"your-client-id","client_secret":"your-client-secret","scopes":["https://www.googleapis.com/auth/gmail.readonly","https://www.googleapis.com/auth/gmail.modify"],"universe_domain":"googleapis.com","expiry":"2024-10-31T21:14:25.000000Z"}

# 管理者パスワード（ハッシュ化前の値）
ADMIN_PASSWORD=your-admin-password